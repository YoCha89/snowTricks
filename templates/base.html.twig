<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} {{title}}  {% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
           <link href="{{ asset('css/style.css') }}" rel="stylesheet"/>
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    <header>

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
          <div class="container-fluid" >
            <div class="collapse navbar-collapse" id="navbarColor01">
                <div class="navCorr" style="display: flex; justify-content: space-between; padding: 20px; align-items: center;">
                    
                    <a class="navbar-brand" href="{{ path('index') }}">Snow Tricks</a>
                    
                    <div id="navRight">

                        {% if app.user is not null %}
                            {% if app.user.profilePic is not null %} 
                              <img class="user-nav-picture" src="{{ asset(app.user.profilePic) }}" alt="" style ="max-width: 80px;">
                            {% else %} 
                              <img class="user-nav-picture" src="{{ asset(anonymous) }}" alt="anonymousIcone" style ="max-width: 80px;">
                            {% endif %}                        
                        {% endif %}
                        
                        <div class="navOption">
                          <ul class="navbar-nav me-auto" style="list-style-type: none;">
                            <li class="nav-item" style="padding-right: 5px; padding-left: 5px; font-size: 17px; ">
                              <a class="nav-link active" href="{{ path('index') }}">Tricks
                              </a>
                            </li>
                            <li class="nav-item" style="padding-right: 5px; padding-left: 5px; font-size: 17px; ">
                                <div style="color :#18bc9c">|</div>
                            </li>


                            {% if app.user is not null %}
                                <li class="nav-item" style="padding-right: 5px; padding-left: 5px; font-size: 17px; ">
                                  <a class="nav-link" href="{{ path('logout') }}">Sign out</a>
                                </li>
                            {% else %}
                                <li class="nav-item" style="padding-right: 5px; padding-left: 5px; font-size: 17px; ">
                                  <a class="nav-link" href="{{ path('login') }}">Sign in</a>
                                </li>
                                <li class="nav-item" style="padding-right: 5px; padding-left: 5px; font-size: 17px; ">
                                    <div style="color :#18bc9c">|</div>
                                </li>
                                <li class="nav-item" style="padding-right: 5px; padding-left: 5px; font-size: 17px; ">
                                  <a class="nav-link" href="{{ path('create_account') }}">Sign up</a>
                                </li>

                            {% endif %}
      <!--                       <li class="nav-item" style="padding-right: 5px; padding-left: 5px; font-size: 17px; ">
                              <a class="nav-link" href="#">Mon compte</a>
                            </li>
                            <li class="nav-item" style="padding-right: 5px; padding-left: 5px; font-size: 17px; ">
                                <div style="color :#18bc9c">|</div>
                            </li> -->
                          </ul>

                            {% if app.user is not null %}
                                <div id="userMail">
                                    {{ app.user.email }}
                                </div>

                            {% endif %}
                        </div>
                    </div>

                </div>
            </div>
          </div>
        </nav>
    </header>
    <body>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        
        {% block body %}{% endblock %}
    </body>

    <footer>
        <div id="copy"></div>
        <p>Copyright @ 2022</p>
    </footer>
</html>
