
    <div class="appForm">
        <h4 class="h3 mb-3 font-weight-normal">Ajouter un média</h4>
        <div class="smartField">
    {{ form_start(form) }}
        </div><br/>
    <div class="part mb-2" style="display: flex; flex-direction:column; justify-content: space-between; margin-bottom: 2em;">
        <div class="smartField">
            {{ form_row(form.title) }}
        </div><br/>
    {% if update is not defined %} 
        <div class="smartFieldUpload">
            {{ form_row(form.mediaPath) }}
        </div><br/>
        <div class="smartFieldUpload">
            {{ form_row(form.trick) }}
        </div><br/>
    {% else %}
        <img class="trick-picture" src="{{ asset(media.mediaPath) }}" alt="{{media.title}}" style ="max-width: 140px;">
        <p>Image associée à la figure : {{media.trick.name}} </p>
    {% endif %}

    </div>

        <button type="submit" class="btn" style="background-color:#2c3e50; color:white;">Enregistrer</button>

    {{ form_end(form) }}
    </div>