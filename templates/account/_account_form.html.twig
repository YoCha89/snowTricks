
{% block content %}
<div class="col-md-12">
    <div class="box box-primary">
        <div class="box-header">
            <h4 class="box-title">Création de compte</h4>
        </div>
        <div class="box-body">
            {{ form_start(form) }}
            <div class="part mb-2" style="display: flex; justify-content: space-around; margin-bottom: 2em;">
                <section class="model" style="width: 50%;">
                    {{ form_row(form.email) }}
                </section>

                <section class="capacity" style="width: 45%;">
                    {{ form_row(form.fullName) }}
                </section>
            </div>
            <div class="part" style="display: flex; justify-content: space-around; margin-bottom: 2em;">
                <section class="provider" style="width: 50%;">
                    {{ form_row(form.secretQ) }}
                </section>
                <section class="state" style="width: 45%;">
                    {{ form_row(form.secretA) }}
                </section>
            </div>

            <div class="button">
                <button type="submit" class="btn btn-success"> <i class="fa fa-save"></i>Créer</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}